<%= form_with model: @user do |form| %>
        <div>
            <%= form.label :username, "Your name here:" %>
            <%= form.text_field :username %>
        </div>
        
        <div>
            <%= form.label :email %>
            <%= form.email_field :email, placeholder: "example@example.com" %>
        </div>

        <div>
            <%= form.label :password %>
            <%= form.password_field :password %>
        </div>
        
        <%= form.button %>
    <% end %>

    <%= @user.errors.full_messages.first if @user.errors.any? %>